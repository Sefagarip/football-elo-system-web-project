
@{
    ViewData["Title"] = "Karsilastirma";
    Layout = "~/Views/Shared/_KullanıciLayout.cshtml";
}

<head>
  <title>Karşılaştırma</title>
  <link rel="stylesheet" href="~/kullanıcı/css/karsilastirma.css">
</head>

<body>
  <div class="container">
    <main class="comparison-content">
      <!-- Karşılaştırma Türü Seçimi -->
      <div class="comparison-type">
        <button class="type-btn active" data-type="team">
          <i class="fas fa-shield-alt"></i> Takım Karşılaştırması
        </button>
        <button class="type-btn" data-type="player">
          <i class="fas fa-user"></i> Oyuncu Karşılaştırması
        </button>
      </div>

      <!-- Karşılaştırma Seçim Alanı -->
      <div class="comparison-selection">
        <div class="selection-container">
          <!-- Sol Seçim -->
          <div class="selection-box">
            <h3>1. Seçim</h3>
            <div class="search-box">
              <input type="text" id="search1" placeholder="Takım/Oyuncu ara...">
              <div class="search-results" id="results1"></div>
            </div>
            <div class="selected-item" id="selected1">
              <div class="placeholder">Henüz seçim yapılmadı</div>
            </div>
          </div>

          <!-- VS İşareti -->
          <div class="vs-container">
            <span class="vs-text">VS</span>
          </div>

          <!-- Sağ Seçim -->
          <div class="selection-box">
            <h3>2. Seçim</h3>
            <div class="search-box">
              <input type="text" id="search2" placeholder="Takım/Oyuncu ara...">
              <div class="search-results" id="results2"></div>
            </div>
            <div class="selected-item" id="selected2">
              <div class="placeholder">Henüz seçim yapılmadı</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Karşılaştırma Sonuçları -->
      <div class="comparison-results">
        <!-- Elo Puan Grafiği -->
        <div class="elo-chart-container">
          <h3><i class="fas fa-chart-line"></i> Elo Puan Değişimi</h3>
          <div class="trend-filters">
            <select id="comparison-period">
              <option value="1m">Son 1 Ay</option>
              <option value="6m">Son 6 Ay</option>
              <option value="1y">Son 1 Yıl</option>
            </select>
          </div>
          <div class="trend-chart" id="comparisonChart">
            <!-- Grafik buraya gelecek (Canvas kullanılabilir) -->
          </div>
          <!-- İstatistikler için isteğe bağlı bir grid eklenmişse; örn: -->
          <div id="statsGrid"></div>
        </div>
      </div>
    </main>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/kullanıcı/js/karsilastirma.js"></script>
</body>

