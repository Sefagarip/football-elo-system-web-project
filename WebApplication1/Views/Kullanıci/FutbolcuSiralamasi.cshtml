
@{
    ViewData["Title"] = "FutbolcuSiralamasi";
    Layout = "~/Views/Shared/_KullanıciLayout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/kullanıcı/css/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>


<head>
    <title>Futbolcu Sıralaması</title>
    <link rel="stylesheet" href="~/kullanıcı/css/futbolcu.css">
</head>
<body>
    <div class="container">
        <div class="content-wrapper">
            <!-- Sol Menü -->
            <aside class="left-sidebar">
                <nav class="country-nav">
                    <h3><i class="fas fa-globe"></i> Ülkeler</h3>
                    <ul class="country-list">
                        <li class="country-item">
                            <a href="#turkiye" class="country-link">
                                <span class="flag">🇹🇷</span>
                                <span class="name">Türkiye</span>
                                <i class="fas fa-chevron-right"></i>
                            </a>
                            <ul class="league-list">
                                <li><a href="#super-lig">Süper Lig Oyuncuları</a></li>
                                <li><a href="#1-lig">1. Lig Oyuncuları</a></li>
                            </ul>
                        </li>
                        <li class="country-item">
                            <a href="#ingiltere" class="country-link">
                                <span class="flag">🏴</span>
                                <span class="name">İngiltere</span>
                                <i class="fas fa-chevron-right"></i>
                            </a>
                            <ul class="league-list">
                                <li><a href="#premier-league">Premier League Oyuncuları</a></li>
                                <li><a href="#championship">Championship Oyuncuları</a></li>
                            </ul>
                        </li>
                        <!-- Diğer ülkeler -->
                    </ul>
                </nav>
            </aside>

            <!-- Ana İçerik -->
            <main class="main-content">
                <div class="trends-container">
                    <section class="elo-trends">
                        <h2><i class="fas fa-chart-line"></i> Futbolcu Elo Değişim Trendi</h2>
                        <div class="trend-filters">
                            <select id="player-trend-period">
                                <option value="1m">Son 1 Ay</option>
                                <option value="6m">Son 6 Ay</option>
                                <option value="1y">Son 1 Yıl</option>
                            </select>
                        </div>
                        <!-- Canvas öğesi eklenerek Chart.js için uygun hale getirildi -->
                        <div class="trend-chart">
                            <canvas id="playerEloTrendChart"></canvas>
                        </div>
                    </section>
                </div>
            </main>

            <!-- Sağ Bölüm -->
            <aside class="right-sidebar">
                <div class="quick-stats">
                    <h2><i class="fas fa-chart-simple"></i> En Yüksek Elo Puanları</h2>
                    <div class="player-list active">
                        <div class="player-item">
                            <div class="player-info">
                                <img src="assets/images/players/haaland.png" alt="Erling Haaland" loading="lazy">
                                <span class="player-name">Erling Haaland</span>
                            </div>
                            <span class="player-elo">2150</span>
                        </div>
                        <div class="player-item">
                            <div class="player-info">
                                <img src="assets/images/players/mbappe.png" alt="Kylian Mbappé" loading="lazy">
                                <span class="player-name">Kylian Mbappé</span>
                            </div>
                            <span class="player-elo">2130</span>
                        </div>
                        <div class="player-item">
                            <div class="player-info">
                                <img src="assets/images/players/bellingham.png" alt="Jude Bellingham" loading="lazy">
                                <span class="player-name">Jude Bellingham</span>
                            </div>
                            <span class="player-elo">2110</span>
                        </div>
                        <div class="player-item">
                            <div class="player-info">
                                <img src="assets/images/players/vinicius.png" alt="Vinícius Júnior" loading="lazy">
                                <span class="player-name">Vinícius Júnior</span>
                            </div>
                            <span class="player-elo">2090</span>
                        </div>
                        <div class="player-item">
                            <div class="player-info">
                                <img src="assets/images/players/salah.png" alt="Mohamed Salah" loading="lazy">
                                <span class="player-name">Mohamed Salah</span>
                            </div>
                            <span class="player-elo">2080</span>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
    <script src="~/kullanıcı/js/futbolcu.js"></script>
</body>
