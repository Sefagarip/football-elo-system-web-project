
@{
    ViewData["Title"] = "TakimSiralamasi";
    Layout = "~/Views/Shared/_KullanıciLayout.cshtml";
}
<head>
    <title> Takım Sıralaması</title>
    <link rel="stylesheet" href="~/kullanıcı/css/takim.css">
</head>

<body>
    <div class="container">
        <div class="content-wrapper">
            <!-- Sol Menü -->
            <aside class="left-sidebar">
                <nav class="country-nav">
                    <h3><i class="fas fa-globe"></i> Ülkeler</h3>
                    <ul class="country-list">
                        <li class="country-item">
                            <a href="#turkiye" class="country-link">
                                <span class="flag">🇹🇷</span>
                                <span class="name">Türkiye</span>
                                <i class="fas fa-chevron-right"></i>
                            </a>
                            <ul class="league-list">
                                <li><a href="#super-lig">Süper Lig</a></li>
                                <li><a href="#1-lig">1. Lig</a></li>
                            </ul>
                        </li>
                        <li class="country-item">
                            <a href="#ingiltere" class="country-link">
                                <span class="flag">🏴</span>
                                <span class="name">İngiltere</span>
                                <i class="fas fa-chevron-right"></i>
                            </a>
                            <ul class="league-list">
                                <li><a href="#premier-league">Premier League</a></li>
                                <li><a href="#championship">Championship</a></li>
                            </ul>
                        </li>
                        <!-- Diğer ülkeler -->
                    </ul>
                </nav>
            </aside>

            <!-- Ana İçerik -->
            <main class="main-content">
                <div class="trends-container">
                    <section class="elo-trends">
                        <h2><i class="fas fa-building"></i> Takım Elo Değişim Trendi</h2>
                        <div class="trend-filters">
                            <select id="team-trend-period">
                                <option value="1m">Son 1 Ay</option>
                                <option value="6m">Son 6 Ay</option>
                                <option value="1y">Son 1 Yıl</option>
                            </select>
                        </div>
                        <!-- Canvas olarak düzenlendi -->
                        <div class="trend-chart">
                            <canvas id="teamEloTrendChart"></canvas>
                        </div>
                    </section>
                </div>
            </main>

            <!-- Sağ Bölüm -->
            <aside class="right-sidebar">
                <div class="quick-stats">
                    <h2><i class="fas fa-chart-simple"></i> En Yüksek Elo Puanları</h2>
                    <div class="team-list active">
                        <div class="team-item">
                            <div class="team-info">
                                <img src="assets/images/teams/manchester-city.png" alt="Manchester City" loading="lazy">
                                <span class="team-name">Manchester City</span>
                            </div>
                            <span class="team-elo">2150</span>
                        </div>
                        <div class="team-item">
                            <div class="team-info">
                                <img src="assets/images/teams/real-madrid.png" alt="Real Madrid" loading="lazy">
                                <span class="team-name">Real Madrid</span>
                            </div>
                            <span class="team-elo">2130</span>
                        </div>
                        <div class="team-item">
                            <div class="team-info">
                                <img src="assets/images/teams/bayern.png" alt="Bayern Münih" loading="lazy">
                                <span class="team-name">Bayern Münih</span>
                            </div>
                            <span class="team-elo">2110</span>
                        </div>
                        <div class="team-item">
                            <div class="team-info">
                                <img src="assets/images/teams/psg.png" alt="PSG" loading="lazy">
                                <span class="team-name">PSG</span>
                            </div>
                            <span class="team-elo">2090</span>
                        </div>
                        <div class="team-item">
                            <div class="team-info">
                                <img src="assets/images/teams/liverpool.png" alt="Liverpool" loading="lazy">
                                <span class="team-name">Liverpool</span>
                            </div>
                            <span class="team-elo">2080</span>
                        </div>
                    </div>
                </div>
            </aside>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/kullanıcı/js/takim.js"></script>
</body>

