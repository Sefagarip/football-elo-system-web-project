
@{
    ViewData["Title"] = "EloHesaplamaları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Elo Hesaplamaları - Futbol Elo Sistemi</title>
    <link rel="stylesheet" href="~/admin/css/admin-dashboard.css">
    <link rel="stylesheet" href="~/admin/css/elo-calculations.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<main class="main-content">
    <header class="top-bar">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Maç ara...">
        </div>
        <div class="user-menu">
            <div class="notifications">
                <i class="fas fa-bell"></i>
                <span class="badge">3</span>
            </div>
            <div class="admin-profile">
                <img src="../images/admin/admin-avatar.png" alt="Admin">
                <span>Admin Adı</span>
                <i class="fas fa-chevron-down"></i>
            </div>
        </div>
    </header>

    <div class="elo-calculations-content">
        <h3>Elo Hesaplamaları</h3>
        <form id="elo-form">
            <div class="form-group">
                <label for="team1">Takım 1:</label>
                <input type="text" id="team1" placeholder="Takım 1 Adı" required>
            </div>
            <div class="form-group">
                <label for="team1-score">Takım 1 Skoru:</label>
                <input type="number" id="team1-score" placeholder="Skor" required>
            </div>
            <div class="form-group">
                <label for="team2">Takım 2:</label>
                <input type="text" id="team2" placeholder="Takım 2 Adı" required>
            </div>
            <div class="form-group">
                <label for="team2-score">Takım 2 Skoru:</label>
                <input type="number" id="team2-score" placeholder="Skor" required>
            </div>
            <button type="submit" class="calculate-btn">Hesapla</button>
        </form>
        <div class="result">
            <h4>Sonuç:</h4>
            <p id="elo-result">Hesaplama sonucu burada görünecek.</p>
        </div>
    </div>
</main>